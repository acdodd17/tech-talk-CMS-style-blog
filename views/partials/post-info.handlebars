<article class="post">
    <div class="title">
        <h2 >{{title}}</h2>
        <p>({{post_content}})</p>
    </div>
    <div class="meta">
        {{format_date created_at}} by {{user.username}}
        <a href="/post/{{id}}">{{comments.length}} {{format_plural "comment" comments.length}}</a>
    </div>
</article>
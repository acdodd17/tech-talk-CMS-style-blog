<ol class="post-list">
    {{#each posts as |post|}}
  <li>
    <article class="post">
      <div class="title">
        <h2 >{{title}}</h2>
        <p>({{post_content}})</p>
      </div>
      <div class="meta">
        {{created_at}} by {{user.username}}
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
      </div>
    </article>
  </li>
  {{/each}}
</ol>